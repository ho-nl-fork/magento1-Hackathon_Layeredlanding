<?xml version="1.0"?>
<config>
    <modules>
        <Hackathon_Layeredlanding>
            <version>0.5.4</version>
        </Hackathon_Layeredlanding>
    </modules>
    <global>
        <models>
            <layeredlanding>
                <class>Hackathon_Layeredlanding_Model</class>
                <resourceModel>layeredlanding_resource</resourceModel>
            </layeredlanding>
            <sitemap>
                <rewrite>
                    <sitemap>Hackathon_Layeredlanding_Model_Sitemap</sitemap>
                </rewrite>
            </sitemap>
            <catalog>
                <rewrite>
                    <design>Hackathon_Layeredlanding_Model_Design</design>
                </rewrite>
            </catalog>
            <catalog>
                <rewrite>
                    <layer_filter_item>Hackathon_Layeredlanding_Model_Catalog_Layer_Filter_Item</layer_filter_item>
                </rewrite>
            </catalog>
            <layeredlanding_resource>
                <class>Hackathon_Layeredlanding_Model_Resource</class>
                <entities>
                    <layeredlanding>
                        <table>layeredlanding</table>
                    </layeredlanding>
                    <attributes>
                        <table>layeredlanding_attributes</table>
                    </attributes>
                    <category>
                        <table>layeredlanding_category</table>
                    </category>
                    <store>
                        <table>layeredlanding_store</table>
                    </store>
                </entities>
            </layeredlanding_resource>
        </models>
        <resources>
            <layeredlanding_setup>
                <setup>
                    <module>Hackathon_Layeredlanding</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </layeredlanding_setup>
            <layeredlanding_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </layeredlanding_write>
            <layeredlanding_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </layeredlanding_read>
        </resources>
        <blocks>
            <layeredlanding>
                <class>Hackathon_Layeredlanding_Block</class>
            </layeredlanding>
            <catalog>
                <rewrite>
                    <layer_state>Hackathon_Layeredlanding_Block_Layer_State</layer_state>
                </rewrite>
            </catalog>
        </blocks>
        <helpers>
            <layeredlanding>
                <class>Hackathon_Layeredlanding_Helper</class>
            </layeredlanding>
        </helpers>
        <events>
            <controller_front_init_routers>
                <observers>
                    <layeredlanding>
                        <type>singleton</type>
                        <class>layeredlanding/observer</class>
                        <method>addLayeredRouter</method>
                    </layeredlanding>
                </observers>
            </controller_front_init_routers>
            <controller_action_layout_load_before>
                <observers>
                    <layeredlanding>
                        <type>singleton</type>
                        <class>layeredlanding/design</class>
                        <method>addLayoutHandleObserver</method>
                    </layeredlanding>
                </observers>
            </controller_action_layout_load_before>
        </events>
    </global>
    <frontend>
        <routers>
            <layeredlanding>
                <use>hackathon_layeredlanding</use>
                <args>
                    <module>Hackathon_Layeredlanding</module>
                    <frontName>layeredlanding</frontName>
                </args>
            </layeredlanding>
        </routers>
        <layout>
            <updates>
                <layeredlanding>
                    <file>layeredlanding.xml</file>
                </layeredlanding>
            </updates>
        </layout>
        <events>
            <catalog_category_load_after>
                <observers>
                    <layeredlanding_categorydata>
                        <type>singleton</type>
                        <class>layeredlanding/observer</class>
                        <method>setCategoryData</method>
                    </layeredlanding_categorydata>
                </observers>
            </catalog_category_load_after>
            <page_block_html_topmenu_gethtml_before>
                <observers>
                    <layeredlanding>
                        <type>singleton</type>
                        <class>layeredlanding/observer</class>
                        <method>pageBlockHtmlTopmenuGethtmlBefore</method>
                    </layeredlanding>
                </observers>
            </page_block_html_topmenu_gethtml_before>
            <catalog_controller_category_init_after>
                <observers>
                    <layeredlanding>
                        <type>singleton</type>
                        <class>layeredlanding/observer</class>
                        <method>catalogControllerCategoryInitAfter</method>
                    </layeredlanding>
                </observers>
            </catalog_controller_category_init_after>
            <controller_action_layout_generate_blocks_after>
                <observers>
                    <layeredlanding>
                        <type>singleton</type>
                        <class>layeredlanding/observer</class>
                        <method>controllerActionLayoutGenerateBlocksAfter</method>
                    </layeredlanding>
                </observers>
            </controller_action_layout_generate_blocks_after>
        </events>
    </frontend>
    <admin>
        <routers>
			<adminhtml>
				<args>
					<modules>
						<layeredlanding before="Mage_Adminhtml">Hackathon_Layeredlanding_Adminhtml</layeredlanding>
					</modules>
				</args>
			</adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <layeredlanding>
                    <file>layeredlanding.xml</file>
                </layeredlanding>
            </updates>
        </layout>
    </adminhtml>
    <default>
        <web>
            <routers>
                <hackathon_layeredlanding>
                    <area>frontend</area>
                    <class>Hackathon_Layeredlanding_Controller_Router</class>
                </hackathon_layeredlanding>
            </routers>
        </web>
        <sitemap>
            <landing>
                <priority>0.25</priority>
                <changefreq>daily</changefreq>
            </landing>
		</sitemap>
        <catalog>
            <seo>
                <layeredlanding_canonical_tag>1</layeredlanding_canonical_tag>
            </seo>
        </catalog>
    </default>
    <phpunit>
        <suite>
            <modules>
                <Hackathon_Layeredlanding />
            </modules>
        </suite>
    </phpunit>
</config>